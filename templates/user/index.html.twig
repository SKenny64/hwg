{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Avatar</th>
                <th>DateCreationUser</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                {% if user.roles is same as ["ROLE_ORGA","ROLE_USER"] %}
                <td>Organisateur</td>
                {% elseif user.roles is same as ["ROLE_ADMIN","ROLE_ORGA","ROLE_USER"] %}
                <td>Admin</td>
                {% else  %}
                <td>Utilisateur</td>
                {% endif %}
                <td>{{ user.avatar }}</td>
                <td>{{ user.DateCreationUser ? user.DateCreationUser|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_new') }}">Create new</a>
{% endblock %}
