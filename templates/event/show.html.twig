{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Name_event</th>
                <td>{{ event.nameEvent }}</td>
            </tr>
            <tr>
                <th>Date_event</th>
                <td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hour_event</th>
                <td>{{ event.hourEvent ? event.hourEvent|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Date_event_creation</th>
                <td>{{ event.dateEventCreation ? event.dateEventCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>City_event</th>
                <td>{{ event.cityEvent }}</td>
            </tr>
            <tr>
                <th>Adress_event</th>
                <td>{{ event.adressEvent }}</td>
            </tr>
            <tr>
                <th>Zip_event</th>
                <td>{{ event.zipEvent }}</td>
            </tr>
            <tr>
                <th>Name_place</th>
                <td>{{ event.namePlace }}</td>
            </tr>
            <tr>
                <th>Total_capacity</th>
                <td>{{ event.totalCapacity }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ event.duration }}</td>
            </tr>
            <tr>
                <th>Price_event</th>
                <td>{{ event.priceEvent }}</td>
            </tr>
            <tr>
                <th>Event_status</th>
                <td>{{ event.eventStatus }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_event_index') }}">back to list</a>

    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
