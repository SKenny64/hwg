{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name_event</th>
                <th>Date_event</th>
                <th>Hour_event</th>
                <th>Description</th>
                <th>Date_event_creation</th>
                <th>City_event</th>
                <th>Adress_event</th>
                <th>Zip_event</th>
                <th>Name_place</th>
                <th>Total_capacity</th>
                <th>Duration</th>
                <th>Price_event</th>
                <th>Event_status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.nameEvent }}</td>
                <td>{{ event.dateEvent ? event.dateEvent|date('Y-m-d') : '' }}</td>
                <td>{{ event.hourEvent ? event.hourEvent|date('H:i:s') : '' }}</td>
                <td>{{ event.description }}</td>
                <td>{{ event.dateEventCreation ? event.dateEventCreation|date('Y-m-d') : '' }}</td>
                <td>{{ event.cityEvent }}</td>
                <td>{{ event.adressEvent }}</td>
                <td>{{ event.zipEvent }}</td>
                <td>{{ event.namePlace }}</td>
                <td>{{ event.totalCapacity }}</td>
                <td>{{ event.duration }}</td>
                <td>{{ event.priceEvent }}</td>
                <td>{{ event.eventStatus }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
