{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<div class="home-banner">
    <h1>Idée de sortie</h1>
    <img>
</div>
<section class="home-category-list">
    <ul>
    {% for categorie in categories %}
        <li><a href="#" class="btn">{{ categorie.libelleCategorie }}</a></li>
    {% endfor %}
    </ul>
</section>
<section class="home-event-overview">
    <div class="row my-5">
        {% for evenement  in evenements %}
        <div class="col-sm-12 col-md-6 col-lg-4 event-card mb-5">
            <div class="card">
                <img src="/assets/images/events/game_day.jpg" alt="" />
                <div class="card-body">
                    <h5 class="card-title">{{ evenement.nomEvenement }}</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d') : '' }}</h6>
                    <p class="card-text">{{ evenement.descriptif[:80] ~ (evenement.descriptif|length > 80 ? '…' ) }}
                    </p>
                    <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-secondary">En savoir plus</a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</section>
{% endblock %}
