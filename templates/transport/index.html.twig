{% extends 'base.html.twig' %}

{% block title %}Transport index{% endblock %}

{% block body %}
    <h1>Transport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>TarifPersonne</th>
                <th>Descriptif</th>
                <th>InfoContact</th>
                <th>DateDepart</th>
                <th>DateCreation</th>
                <th>LieuDepart</th>
                <th>NbPlace</th>
                <th>InfoPaiement</th>
                <th>StatutTransport</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transport in transports %}
            <tr>
                <td>{{ transport.id }}</td>
                <td>{{ transport.TarifPersonne }}</td>
                <td>{{ transport.descriptif }}</td>
                <td>{{ transport.InfoContact }}</td>
                <td>{{ transport.DateDepart ? transport.DateDepart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ transport.DateCreation ? transport.DateCreation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ transport.LieuDepart }}</td>
                <td>{{ transport.NbPlace }}</td>
                <td>{{ transport.InfoPaiement }}</td>
                <td>{{ transport.StatutTransport }}</td>
                <td>
                    <a href="{{ path('app_transport_show', {'id': transport.id}) }}">show</a>
                    <a href="{{ path('app_transport_edit', {'id': transport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_transport_new') }}">Create new</a>
{% endblock %}
